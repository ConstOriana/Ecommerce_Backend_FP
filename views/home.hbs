                        <div id="idProduct{{@index}}" class="d-none">{{ _id }}</div>
                        <div class="col-xl-3 col-lg-4 col-md-6 col-ms-12">
                            <div class="card mb-2">
                                <div id="thumbnailDiv">
                                    <img id="thumbnail" src={{ thumbnail }} class="card-img-top" alt="Img" />
                                </div>
                                <div class="card-body" style="background-color:  rgba(0, 0, 139, 0.514)">
                                    <div id="titleDiv" class=" d-flex justify-content-center">
                                        <h6 id="title" style="color: golden;">{{ title }}</h6>
                                    </div>
                                    <div id="categoryDiv">
                                        <p class="small"><a href="#" id="category" class="text-warning">{{ category }}</a></p>
                                    </div>
                                    <div id="descriptionDiv" class="mb-2 text-warning">
                                        <h6 id="description">{{ description }}</h6>
                                    </div>
                                    <div id="stockAndPriceDiv" class="d-flex justify-content-between mb-3">
                                        <div id="stockDiv">
                                            <p class="text-warning mb-0">stock: <span id="stock" class="fw-bold">{{ stock }}</span></p>
                                        </div>
